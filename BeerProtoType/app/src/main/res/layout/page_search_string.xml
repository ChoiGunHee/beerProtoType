<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light"
    tools:context="beer.dku.com.beerprototype.page.SearchStringPage">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:background="@color/ripple_red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:hint="검색어를 입력하세요."
                android:id="@+id/searchString_autoCompleteTextView"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ripple_red"
            android:layout_gravity="center_horizontal">

            <CheckBox
                android:text="전체"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:id="@+id/totalCheckBox"
                android:textAlignment="center"
                android:layout_weight="1" />

            <CheckBox
                android:text="에일"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/aleCheckBox"
                android:textAlignment="center"
                android:layout_weight="1" />

            <CheckBox
                android:text="라거"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/largerCheckBox"
                android:textAlignment="center"
                android:layout_weight="1" />

            <CheckBox
                android:text="IPA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ipaCheckBox"
                android:textAlignment="center"
                android:layout_weight="1" />

            <CheckBox
                android:text="필즈너"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pilsnerCheckBox"
                android:textAlignment="center"
                android:layout_weight="1" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ripple_red"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="검색"
                android:textSize="25dp"
                android:id="@+id/search_string_btn"
                android:background="@color/ripple_red"/>

        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light"
            android:id="@+id/searchStringListView"/>

    </LinearLayout>
</FrameLayout>
